package kg.rp.ibl;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class JanelaTexto
{
	public JanelaTexto(String título, String texto)
	{
		JTextArea área = new JTextArea(texto);
		
		JPanel painel = new JPanel();
		painel.add(área);
		painel.setPreferredSize(new Dimension(640, 480));
		
		JFrame janela = new JFrame(título);
		janela.addKeyListener(new KeyAdapter()
		{
			public void keyPressed(KeyEvent e)
			{
				if (e.getKeyCode() == KeyEvent.VK_ESCAPE)
					janela.dispose();
			}
		});
		janela.add(painel);
		janela.pack();
		janela.setVisible(true);
	}
}
