package kg.rp.ibl;

import static kg.rp.ibl.JanelaTexto.KeyEventDispatcherLambdaProxy.*;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

import kg.util.swing.*;

public class JanelaTexto
{
	public JanelaTexto(String título, String texto)
	{
		JTextArea área = new JTextArea(texto, 20, 80);
		área.setFont(new Font(Font.MONOSPACED, Font.PLAIN, 12));
		área.setEditable(false);
		
		JScrollPane rolamento = new JScrollPane(área);
		
		JPanel painel = new JPanel();
		painel.add(rolamento);
		
		JFrame janela = new JFrame(título);
		janela.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		Janelas.registrarFechamentoJanela(janela);
		
		janela.add(painel);
		janela.pack();
		janela.setVisible(true);
	}
}
